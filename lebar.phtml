        <form>
            <h2>Nous écrire</h2>
            <input class="my-5" type="text" name="email" id="email" aria-describedby="emailHelp" placeholder="Adresse email">
            <textarea class="send-message my-5" type="text" name="message" id="message" placeholder="Message"></textarea>
            <input class="sendEmail" type="submit" name="connexion" value="Envoyer">
        </form>
        <div class="failed"></div>
    </section> 
</main>
